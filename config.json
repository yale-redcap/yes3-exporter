    "links": {
        "project": [
            {
                "name": "YES3 Export Settings",
                "icon": "fab fa-connectdevelop",
                "url":  "plugins/yes3_fieldmapper_setup.php"
            },
            {
                "name": "YES3 Export Specifications",
                "icon": "fab fa-connectdevelop",
                "url":  "plugins/yes3_fieldmapper.php"
            }
        ]
    },

    "system-settings": [
    ],

    "project-settings": [
        {
            "key": "header-specifications-section",
            "type": "descriptive",
            "name": "SPECIFICATIONS"
        },
        {
            "key": "specification",
            "type": "sub_settings",
            "name": "Specification",
            "repeatable": true,
            "required": true,
            "sub_settings":[
                {
                    "key": "specification-key",
                    "type": "text",
                    "name": "Unique specification key (DO NOT CHANGE AFTER MAPPINGS HAVE BEEN SAVED)"        
                },
                {
                    "key": "specification-name",
                    "type": "text",
                    "name": "Specification name"        
                },
                {
                    "key": "specification-description",
                    "type": "text",
                    "name": "Specification description"        
                },
                {
                    "key": "specification-export-layout",
                    "name": "Export layout",
                    "type": "radio",
                    "required": true,
                    "choices":[
                        {
                            "value":"H",
                            "name":"Horizontal<br>(one row per recordid, one column per field per event)"
                        },
                        {
                            "value":"V",
                            "name":"Vertical<br>(one row per recordid per event, one column per field)"
                        }
                    ]
                },
                {
                    "key": "specification-data-elements",
                    "name": "Predefined data elements (optional; JSON string)",
                    "type": "textarea",
                    "required": false
                }

            ]
        },
        {
            "key": "header-events-section",
            "type": "descriptive",
            "name": "EVENT ABBREVIATIONS"
        },
        {
            "key": "event-abbreviations",
            "name": "Event abbreviation",
            "type": "sub_settings",
            "required": false,
            "repeatable": true,
            "sub_settings": [
                {
                    "key": "event-id",
                    "name": "Event",
                    "type": "event-list"     
                },
                {
                    "key": "event-abbreviation",
                    "type": "text",
                    "name": "Abbreviation (suggest 4 characters or less)"
                }
            ]
        }
    ],

    "crons":[
    ],

    "no-auth-pages": [
    ],

    "compatibility": {
    "php-version-min": "7.2",
    "redcap-version-min": "10.0.0"
    },

    "framework-version": 5
}